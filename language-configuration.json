{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "/*", "close": "*/", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(fn|struct|if|else|while|for|lock|shared|private)\\b.*=>\\s*$",
      "end": "^(?=\\S)"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^.*=>\\s*$",
    "decreaseIndentPattern": "^\\s*(else)\\s*=>.*$"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
  "onEnterRules": [
    {
      "beforeText": "^.*=>\\s*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*//.*$",
      "action": {
        "indent": "none",
        "appendText": "// "
      }
    },
    {
      "beforeText": "^\\s*#(?!pragma).*$",
      "action": {
        "indent": "none",
        "appendText": "# "
      }
    }
  ]
}
